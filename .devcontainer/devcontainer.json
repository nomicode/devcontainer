{
  "build": {
    "dockerfile": "Dockerfile"
  },
  // "remoteUser": "root",
  "onCreateCommand": ["${DEVCONTAINER_WORKDIR}/scripts/on_create.sh"],
  "updateContentCommand": [
    "${DEVCONTAINER_WORKDIR}/scripts/update_content.sh"
  ],
  "postCreateCommand": [
    "${DEVCONTAINER_WORKDIR}/scripts/post_create.sh"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "trunk.trunkPath": "./node_modules/bin/trunk",
        "[shellscript]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[dockerfile]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[javascript]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[python]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[yaml]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[json]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[markdown]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[ignore]": {
          "editor.defaultFormatter": "trunk.io"
        },
        "[dotenv]": {
          "editor.defaultFormatter": "trunk.io"
        }
      },
      "extensions": [
        "codezombiech.gitignore",
        "david-reis.crashacters",
        "EditorConfig.EditorConfig",
        "ms-azuretools.vscode-docker",
        "nhoizey.gremlins",
        "PascalReitermann93.vscode-yaml-sort",
        "redhat.vscode-yaml",
        "richie5um2.vscode-sort-json",
        "sandcastle.whitespace",
        "shardulm94.trailing-spaces",
        "tetradresearch.vscode-h2o",
        "trunk.io",
        "Tyriar.sort-lines",
        "valentjn.vscode-ltex",
        "xshrim.txt-syntax"
      ]
    }
  }
}
